    var primaryKeyColumnName = primaryKeyColumn != null ? primaryKeyColumn.ColumnName : string.Format("{0}Id", Model.TableName);
    var hasModifiedDateColumn = Model.Columns.Exists(c => c.ColumnName.Equals("ModifiedDate"));
}

